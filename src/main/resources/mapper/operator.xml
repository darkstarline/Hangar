<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="operator">
    <sql id="operatorList"> id,code,name,password,email,plaintext_password,is_admin,try_times,lock_flag,notes,state,create_date,tel </sql>
    <select id="getBean"  parameterType="OperatorBean" resultType="OperatorBean">
        SELECT <include refid="operatorList"/>
        FROM operator
        <where>
            <if test="id!=null and id!=''">
                and id = #{id}
            </if>
            <if test="code!=null and code!=''">
                and code = #{code}
            </if>
            <if test="name!=null and name!=''">
                and name = #{name}
            </if>
            <if test="password!=null and password!=''">
                and password = #{password}
            </if>
            <if test="email!=null and email!=''">
                and email = #{email}
            </if>
            <if test="plaintextPassword!=null and plaintextPassword!=''">
                and plaintext_password = #{plaintextPassword}
            </if>
            <if test="isAdmin!=null and isAdmin!=''">
                and is_admin = #{isAdmin}
            </if>
            <if test="tryTimes!=null and tryTimes!=''">
                and try_times = #{tryTimes}
            </if>
            <if test="lockFlag!=null and lockFlag!=''">
                and lock_flag = #{lockFlag}
            </if>
            <if test="notes!=null and notes!=''">
                and notes = #{notes}
            </if>
            <if test="state!=null and state!=''">
                and state = #{state}
            </if>
            <if test="createDate!=null and createDate!=''">
                and create_date = #{createDate}
            </if>
            <if test="tel!=null and tel!=''">
                and tel = #{tel}
            </if>
        </where>
        </select>

</mapper>